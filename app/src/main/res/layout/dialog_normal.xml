<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog-normal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/tab_dimens_06"
        android:text="title"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_size_18" />

    <TextView
        android:id="@+id/dialog-normal_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/tab_dimens_08"
        android:text="sure"
        android:textColor="@color/c_212121"
        android:textSize="@dimen/tv_size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog-normal_cancel"
            android:layout_width="@dimen/tab_dimens_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/tab_dimens_08"
            android:text="cacel"
            android:background="@drawable/bg_gray_line"
            android:textColor="@color/c_212121"
            android:textSize="@dimen/tv_size_16" />


        <TextView
            android:id="@+id/dialog-normal_sure"
            android:layout_width="@dimen/tab_dimens_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/tab_dimens_08"
            android:paddingTop="@dimen/tab_dimens_06"
            android:text="sure"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_18" />
    </LinearLayout>
</LinearLayout>